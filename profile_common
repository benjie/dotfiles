function fixupstream {
  BRANCH="$(git symbolic-ref HEAD)" || return 1
  BRANCH=${BRANCH##refs/heads/}
  git branch --set-upstream-to="origin/${BRANCH}" "${BRANCH}"
}

#function gpu {
